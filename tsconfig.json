{
  "compilerOptions": {
    /* Базові налаштування проєкту */
    "target": "es2021",         /* Цільова версія JavaScript: використовуйте сучасну версію, наприклад, ES2021, для підтримки останніх можливостей. */
    "module": "es2020",         /* Система модулів: використовуйте "es2020" для ES-модулів, або "commonjs" для Node.js. */
    "moduleResolution": "node",  /* Стратегія пошуку модулів: "node" підходить для більшості проєктів. */
    "allowJs": false,           /* Забороняє компіляцію .js файлів: встановіть у true, якщо потрібно компілювати існуючий код JavaScript. */
    "checkJs": false,           /* Не перевіряє .js файли на наявність помилок (лише якщо allowJs: true). */
    "jsx": "preserve",          /* Як обробляти JSX: "preserve" залишає JSX без змін для обробки React. */
    "outDir": "./dist",          /* Директорія для вихідних файлів JavaScript: зазвичай використовується "dist" або "build". */
    "rootDir": "./src",          /* Коренева директорія ваших TypeScript файлів. */
    "sourceMap": true,         /* Створює файли sourcemap (.map) для полегшення налагодження. */

    /* Сувора перевірка типів */
    "strict": true,            /* Вмикає всі суворі налаштування для максимальної безпеки типів. */
    "noImplicitAny": true,     /* Повідомляє про помилки, коли тип неможливо вивести. */
    "strictNullChecks": true,  /* Враховує null та undefined під час перевірки типів. */
    "strictFunctionTypes": true, /* Перевіряє сумісність типів параметрів функцій. */
    "strictPropertyInitialization": true, /* Перевіряє ініціалізацію властивостей класів у конструкторі. */
    "noImplicitReturns": true,   /* Повідомляє про відсутність повернення значення у функціях. */

    /* Покращення міжмодульної взаємодії */
    "esModuleInterop": true,       /* Полегшує імпорт модулів CommonJS в ES-модулі. */
    "allowSyntheticDefaultImports": true, /* Дозволяє імпорт за замовчуванням з модулів без експорту за замовчуванням. */
    "forceConsistentCasingInFileNames": true, /* Забезпечує однакові регістри в імпортах. */

    /* Оптимізація та інші налаштування */
    "skipLibCheck": true,           /* Пропускає перевірку типів у файлах .d.ts для прискорення компіляції (може бути небезпечно). */
    // "incremental": true,       /* Дозволяє інкрементну компіляцію для швидших наступних збірок. */
    "removeComments": true,       /* Видаляє коментарі з вихідного коду JavaScript. */
    "preserveConstEnums": true,  /* Забороняє стирання оголошень const enum. */
    "emitDecoratorMetadata": true, /* Зберігає метадані про типи для декораторів (якщо використовуються). */
    "experimentalDecorators": true, /* Дозволяє використовувати декоратори (експериментальна можливість). */
     "lib": ["dom", "ES2021"],    /* Які бібліотеки включити (залежить від середовища, наприклад, "dom" для браузера). */
  },
  "include": [
    "src/**/*.ts"       /* Включає всі файли .ts у папці src та її підпапках. */
  ],
  "exclude": [
    "node_modules",     /* Виключає папку node_modules. */
    "**/*.spec.ts"      /* Виключає файли тестів (наприклад, .spec.ts). */
  ]
}
